<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="rule_ai_assistant_session_user" model="ir.rule">
        <field name="name">AI Assistant Session: solo usuario</field>
        <field name="model_id" ref="ai_production_assistant.model_ai_assistant_session"/>
        <field name="domain_force">[("user_id", "=", user.id)]</field>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_create" eval="1"/>
        <field name="perm_unlink" eval="1"/>
    </record>

    <record id="rule_ai_assistant_message_user" model="ir.rule">
        <field name="name">AI Assistant Message: solo usuario</field>
        <field name="model_id" ref="ai_production_assistant.model_ai_assistant_message"/>
        <field name="domain_force">[("session_id.user_id", "=", user.id)]</field>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_create" eval="1"/>
        <field name="perm_unlink" eval="0"/>
    </record>
</odoo>
