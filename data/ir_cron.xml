<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1"> <!-- Usamos noupdate para que el usuario pueda cambiar la frecuencia manualmente en Odoo -->
        <record id="ir_cron_process_ai_queue" model="ir.cron">
            <field name="name">AI Assistant: Procesar Cola Ollama</field>
            <field name="model_id" ref="model_ai_assistant_message"/>
            <field name="state">code</field>
            <field name="code">model._cron_process_ai_queue()</field>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="interval_type">minutes</field>
            <field name="active" eval="True"/>
        </record>
    </data>
</odoo>
