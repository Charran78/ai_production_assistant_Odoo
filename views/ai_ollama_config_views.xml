<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- List view for ai.ollama.config -->
    <record id="view_ai_ollama_config_list" model="ir.ui.view">
        <field name="name">ai.ollama.config.list</field>
        <field name="model">ai.ollama.config</field>
        <field name="arch" type="xml">
            <list string="Configuraciones Ollama">
                <field name="name"/>
                <field name="url"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <!-- Form view for ai.ollama.config -->
    <record id="view_ai_ollama_config_form" model="ir.ui.view">
        <field name="name">ai.ollama.config.form</field>
        <field name="model">ai.ollama.config</field>
        <field name="arch" type="xml">
            <form string="Configuración del servidor Ollama">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_test_connection" 
                                type="object" 
                                class="btn btn-primary"
                                string="Probar conexión"/>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Nombre del servidor"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Configuración de conexión">
                            <field name="url" placeholder="http://localhost:11434"/>
                            <field name="timeout"/>
                            <field name="active"/>
                        </group>
                        <group string="Optimización (Hardware)">
                            <field name="num_ctx"/>
                            <field name="temperature"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action for ai.ollama.config -->
    <record id="action_ai_ollama_config" model="ir.actions.act_window">
        <field name="name">Configuraciones Ollama</field>
        <field name="res_model">ai.ollama.config</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Configura la conexión con el servidor Ollama local.
            </p>
        </field>
    </record>

    
</odoo>
