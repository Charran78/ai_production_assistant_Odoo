<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_ai_ollama_model_tree" model="ir.ui.view">
        <field name="name">ai.ollama.model.tree</field>
        <field name="model">ai.ollama.model</field>
        <field name="arch" type="xml">
            <list string="Modelos IA">
                <field name="name"/>
                <field name="size_mb"/>
                <field name="active" widget="boolean_toggle"/>
            </list>
        </field>
    </record>

    <record id="view_ai_ollama_model_form" model="ir.ui.view">
        <field name="name">ai.ollama.model.form</field>
        <field name="model">ai.ollama.model</field>
        <field name="arch" type="xml">
            <form string="Modelo IA">
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name"/></h1>
                    </div>
                    <group>
                        <field name="size_mb"/>
                        <field name="active"/>
                    </group>
                    <notebook>
                        <page string="Detalles TÃ©cnicos">
                            <field name="details"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_ai_ollama_model" model="ir.actions.act_window">
        <field name="name">Modelos IA (Ollama)</field>
        <field name="res_model">ai.ollama.model</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Sincroniza los modelos de tu servidor Ollama local.
            </p>
        </field>
    </record>

    <record id="action_sync_ollama_models" model="ir.actions.server">
        <field name="name">Sincronizar Modelos</field>
        <field name="model_id" ref="model_ai_ollama_model"/>
        <field name="state">code</field>
        <field name="code">
            action = model.action_sync_models()
        </field>
    </record>

</odoo>
